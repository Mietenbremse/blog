---
import MarketingButton from "./MarketingButton.astro"

const {title, description} = Astro.props;

---

<div class="flex flex-wrap justify-between gap-x-10 py-10">
    <img class="w-full sm:w-5/12 object-scale-down" src="blog-placeholder-2.jpg" alt="" />

    <div class="flex flex-col w-full sm:w-5/12 py-12">
        <h5>{title}</h5>
        <p>{description}</p>
        <MarketingButton />
    </div>
</div>
---
const { title, description, src } = Astro.props;
---

<article class="flex flex-wrap justify-between">
    <img
        class="aspect-[8/5] object-cover mb-6"
        src=`${import.meta.env.BASE_URL}/${src}`
        alt=""
    />

    <div class="w-full align-start">
        <h3 class="title-22 mb-3">{title}</h3>
        <p class="text-lg-book">{description}</p>
    </div>
</article>
